{
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Debug Modelviewer",
                "type": "cppdbg",
                "request": "launch",
                "args": [],
                "stopAtEntry": false,
                "cwd": "${CMAKE_SOURCE_DIR}",
                "environment": [
                    {
                        "name":"PATH",
                        "value":"$ENV{MINGW_PREFIX}/bin"
                    }                    
                ],
                "externalConsole": true,
                "windows":
                    {
                        "program": "${CMAKE_BINARY_DIR}/bin/modelviewer.exe",
                        "miDebuggerPath": "${GDB_EXECUTABLE}",
                        "MIMode": "gdb",
                        "setupCommands": [
                            {
                                "description": "Enable pretty-printing for gdb",
                                "text": "-enable-pretty-printing",
                                "ignoreFailures": true
                            }
                         ]
                    }
            },
            {
                "name": "Debug Unit Tests",
                "type": "cppdbg",
                "request": "launch",
                "args": [],
                "stopAtEntry": false,
                "cwd": "${CMAKE_SOURCE_DIR}",
                "environment": [
                    {
                        "name":"PATH",
                        "value":"$ENV{MINGW_PREFIX}/bin"
                    }                    
                ],
                "externalConsole": true,
                "windows":
                    {
                        "program": "${CMAKE_BINARY_DIR}/bin/unit-tests.exe",
                        "miDebuggerPath": "${GDB_EXECUTABLE}",
                        "MIMode": "gdb",
                        "setupCommands": [
                            {
                                "description": "Enable pretty-printing for gdb",
                                "text": "-enable-pretty-printing",
                                "ignoreFailures": true
                            }
                         ]
                    }
            }
        ]
    }